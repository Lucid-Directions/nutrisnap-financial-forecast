                            font: {
                                size: 11
                            }
                        }
                    },
                    title: {
                        display: false // Title is already on the card
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.label || '';
                                if (label) {
                                    label += ': ';
